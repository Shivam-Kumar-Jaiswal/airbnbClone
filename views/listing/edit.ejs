<% layout('layout/boilerplate') -%>
   <div class="row mt-1">
    <div class="col-8 offset-2">
        <h1>Edit Details</h1>
        <form action="/listing/<%=listings._id%>?_method=put" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label"><b>Title :</b></label>
                <input id="title" type="text" name="listing[title]" class="form-control" value="<%=listings.title %>" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label"><b>Description :</b></label> 
                <textarea name="listing[description]"  cols="30" rows="2" id="description"  class="form-control" required><%=listings.description %></textarea>
            </div>
            <div class="edit-img">
                <p><b>Original Image :</b></p>
                <img src="<%= originalUrl %>" alt="">
            </div>           
            <div class="mb-3">
                <label for="image" class="form-label"><b>Image :</b></label> 
                <input type="file" name="listing[image]"  id="image"  class="form-control" >
            </div>
            <div class="mb-3">
                <label class="form-label" for="category">Category:</label>
                <select  class="form-control" name="listing[category]" id="category">
                  <option value="<%= listings.category %>"><%= listings.category %></option>
                  <option value="Beach">Beach</option>
                  <option value="Skiing">Skiing</option>
                  <option value="Castles">Castles</option>
                  <option value="Iconic">Iconic Cities</option>
                  <option value="Romantic">Romantic</option>
                  <option value="Sunlight">Sunlight</option>
                  <option value="Water">Water</option>
                  <option value="Green"> All Green</option>
                  <option value="Night">Night</option>
                </select>
              </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label"><b>Price :</b></label>
                    <input type="number" name="listing[price]" value="<%=listings.price %>" id="price"  class="form-control" required>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label" ><b>Country :</b></label>
                    <input type="text" name="listing[country]" value="<%=listings.country %>"  id="country"  class="form-control" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label"><b>Location :</b></label>
                <input type="text" name="listing[location]" value="<%=listings.location %>" id="location"  class="form-control" required>
            </div>
        
            <button class="btn btn-success edit-btn mb-1">Submit</button>
        </form>
    </div>
   </div>
