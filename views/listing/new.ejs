<% layout('layout/boilerplate') -%>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Create New List </h3>
        <form action="/listing" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input type="text" class="form-control" name="listing[title]"  placeholder="Add a Catchy Tittle" id="title" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">
                        Tittle should be valid
                      </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="listing[description]" placeholder="Enter Description" cols="10" rows="2" id="description"  required></textarea>
                    <div class="invalid-feedback">
                        Description should be valid
                      </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="file" name="listing[image]"  id="image">
                    
                </div>
                <div class="mb-3">
                  <label class="form-label" for="category">Category:</label>
                  <select  class="form-control" name="listing[category]" id="category">
                    <option value="">Choose any One</option>
                    <option value="Beach">Beach</option>
                    <option value="Skiing">Skiing</option>
                    <option value="Castles">Castles</option>
                    <option value="Iconic">Iconic Cities</option>
                    <option value="Romantic">Romantic</option>
                    <option value="Sunlight">Sunlight</option>
                    <option value="Water">Water</option>
                    <option value="Green"> All Green</option>
                    <option value="Night">Night</option>
                  </select>
                </div>
               <div class="row">
                <div class="mb-3 col-md-4">
                    <label class="form-label" for="price">Price</label>
                    <input class="form-control"   name="listing[price]" placeholder="1200" id="price" required>
                    <div class="invalid-feedback">
                        Price should be valid
                      </div>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label class="form-label" for="country">Country</label>
                    <input class="form-control"  type="text" name="listing[country]" placeholder="India" id="country" required>
                    <div class="invalid-feedback">
                        Country should be valid
                      </div>
                </div>
               </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control"required type="text" name="listing[location]" placeholder="Jaipur,Rajasthan" id="location">
                    <div class="invalid-feedback">
                        Location should be valid
                      </div>
                </div>
                <button class="btn btn-dark add-btn mb-2">Submit</button>
               <br>
        </form>
    </div>
</div> 

